<%= turbo_frame_tag dom_id(task) do %>
  <div id="<%= dom_id task %>" class="rounded border-2 p-4">
    <p class="my-5">
      <strong class="block font-medium mb-1">Summary:</strong>
      <%= task.summary %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Description:</strong>
      <%= task.description %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Status:</strong>
      <%= task.status.titleize %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Assignee:</strong>
      <%= task.assignee_name %>
    </p>
      <div class="grid grid-cols-2 gap-1">
        <%= link_to "Edit this task", edit_task_path(task), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
        <%= button_to "Delete", task_path(task), method: :delete, class: "bg-red-50 px-3 py-2 rounded inline-flex items-center justify-center text-red-600" %>
      </div>
  </div>
<% end %>